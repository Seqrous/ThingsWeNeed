<Page x:Class="Desktop.Pages.User.UserCreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserCreatePage">

    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Create User" FontSize="50" VerticalAlignment="Top" Margin="10,10,0,0" Height="80" Width="295"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Username" FontSize="25" VerticalAlignment="Top" Margin="10,90,0,0" Height="43" Width="115"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Email" FontSize="25" VerticalAlignment="Top" Margin="10,138,0,0" Height="43" Width="165"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="First Name" FontSize="25" VerticalAlignment="Top" Margin="10,234,0,0" Height="43" Width="181"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Last Name" FontSize="25" VerticalAlignment="Top" Margin="10,282,0,0" Height="43" Width="165"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Phone Number" FontSize="25" VerticalAlignment="Top" Margin="10,186,0,0" Height="43" Width="181"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Password" FontSize="25" VerticalAlignment="Top" Margin="427,90,0,0" Height="43" Width="115"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Confirm Password" FontSize="25" VerticalAlignment="Top" Margin="427,138,0,0" Height="70" Width="115"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Height="43" Margin="195,90,0,0" TextWrapping="Wrap" Text="" FontSize="25" VerticalAlignment="Top" Width="217"/>
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" Height="43" Margin="195,138,0,0" TextWrapping="Wrap" Text="" FontSize="25" VerticalAlignment="Top" Width="217"/>
        <TextBox x:Name="phoneNumberTextBox" HorizontalAlignment="Left" Height="43" Margin="195,186,0,0" TextWrapping="Wrap" Text="" FontSize="25" VerticalAlignment="Top" Width="217"/>
        <TextBox x:Name="firstNameTextBox" HorizontalAlignment="Left" Height="43" Margin="195,234,0,0" TextWrapping="Wrap" Text="" FontSize="25" VerticalAlignment="Top" Width="217"/>
        <TextBox x:Name="lastNameTextBox" HorizontalAlignment="Left" Height="43" Margin="195,282,0,0" TextWrapping="Wrap" Text="" FontSize="25" VerticalAlignment="Top" Width="217"/>
        <PasswordBox x:Name="confirmPasswordTextBox" HorizontalAlignment="Left" Margin="542,90,0,0" VerticalAlignment="Top" Height="43" Width="216"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="542,152,0,0" VerticalAlignment="Top" Height="42" Width="216"/>
        <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="91,353,0,0" VerticalAlignment="Top" Width="132" Height="46" Click="cancelBtn_Click"/>
        <Button x:Name="createBtn" Content="Create" HorizontalAlignment="Left" Margin="280,353,0,0" VerticalAlignment="Top" Width="132" Height="46" Click="createBtn_Click"/>
    </Grid>
</Page>
