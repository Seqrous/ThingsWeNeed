@using System.Activities.Expressions
@using System.Runtime.Remoting.Messaging
@using ThingsWeNeed.Models
@model ThingsWeNeed.Models.ViewModels.ThingsListViewModel

<script src="~/Scripts/ViewsScripts/ThingsListScripts.js"></script>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>New Thing</title>
</head>
<body>
    <h3 style="text-align: center;">Insert new thing</h3>
    <div class="container">
        <form method='post'>
            <div class="form-group col-lg-4">
                <label for="name" class="control-label">Thing name:</label>
                <input name='name' type='text' class="form-control input-sm">
            </div>
            <div class="form-group col-lg-4">
                <label for="lastbought" class="control-label">Last bought:</label>
                <input name='lastbought' id="lastbought" class="form-control input-sm">
            </div>
            <div class="form-group col-lg-4">
                <label for="average" class="control-label">Average price:</label>
                <input name='average' type='text' class="form-control input-sm">
            </div>
            <div class="form-group col-lg-4">
                <label for="household" class="control-label">Average price:</label>
                <Select name="household">
                    @if (Model.User != null)
                    {
                        if (Model.User.Households.Count > 0)
                        {
                            foreach (Household household in Model.User.Households)
                            {
                                <option>@household</option>
                            }
                        }
                    }
                </Select>
            </div>
            <div class="form-group col-lg-2">
                <input type='submit' name='ok' value='Add' class="btnbtn-default">
            </div>
        </form>
    </div>
</body>
</html>
